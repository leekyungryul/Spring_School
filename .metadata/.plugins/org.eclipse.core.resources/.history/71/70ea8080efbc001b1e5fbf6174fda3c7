package com.google.lkr;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.Statement;

import org.sqlite.SQLiteConfig;

public class UserDB {
	public void createTable() {
		try {
//			open
			Class.forName("org.sqlite.JDBC");
			SQLiteConfig config = new SQLiteConfig();
			Connection connection = DriverManager.getConnection("jdbc:sqlite:/" + "c:/tomcat/user.db", config.toProperties());
//			use
			String query = "CREATE TABLE(idx INTEGER PRIMARY KEY AUTOINCREMENT, score REAL, created TEXT)";
//			sqlite는 정수는 integer, 실수는 real, 문자는 text
			Statement statement = connection.createStatement();
			int result = statement.executeUpdate(query);
			statement.close();
//			close
			connection.close();
		} catch(Exception e) {
			
		}
	}
	
}
